@page "/xem-hoat-dong/{IDHoatDong}"
@model HoatDongSinhVien.Pages.Student.XemHoatDongModel
@{
    ViewData["Title"] = "Chi Tiết Hoạt Động";
}

<style>
    .activity-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .card-header-custom {
        background: linear-gradient(135deg, #0d6efd, #0dcaf0); /* Màu xanh gradient */
        color: white;
        padding: 20px;
    }

    .info-label {
        font-weight: 600;
        color: #6c757d;
        text-transform: uppercase;
        font-size: 0.85rem;
    }

    .info-value {
        font-size: 1.1rem;
        font-weight: 500;
        color: #212529;
    }

    .qr-container {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 15px;
        text-align: center;
        border: 1px dashed #dee2e6;
        transition: transform 0.2s;
        height: 100%;
    }

        .qr-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        }

    .qr-img {
        width: 140px;
        height: 140px;
        object-fit: contain;
        margin-bottom: 10px;
    }
</style>

<div class="container py-4">
    <div class="card activity-card">
        <div class="card-header-custom d-flex justify-content-between align-items-center">
            <h3 class="mb-0 fw-bold"><i class="bi bi-info-circle"></i> Chi Tiết Hoạt Động</h3>

            @if (User.IsInRole("GiaoVien") || User.IsInRole("Admin") || User.IsInRole("BanCanSu"))
            {
                <a asp-page="/Admin/XemDanhSachDangKyHoatDong"
                   asp-route-IDHoatDong="@Model.HoatDong.IDHoatDong"
                   class="btn btn-light text-primary fw-bold shadow-sm">
                    <i class="bi bi-clipboard-data"></i> DS đăng ký
                </a>
            }
        </div>

        <div class="card-body p-4">
            <div class="row g-4">
                <div class="col-lg-8">
                    <h2 class="text-primary fw-bold mb-3">@Model.HoatDong.TenHoatDong</h2>

                    <div class="mb-4">
                        <span class="info-label">Mô Tả:</span>
                        <div class="p-3 bg-light rounded mt-2 border-start border-4 border-primary">
                            @Model.HoatDong.MoTa
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="info-label"><i class="bi bi-tag"></i> Lĩnh Vực</div>
                            <div class="info-value text-info">@Model.HoatDong.LinhVuc?.TenLinhVuc</div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="info-label"><i class="bi bi-calendar-event"></i> Ngày Tổ Chức</div>
                            <div class="info-value">@Model.HoatDong.NgayToChuc.ToString("dd/MM/yyyy")</div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="info-label"><i class="bi bi-check-circle"></i> Trạng Thái</div>
                            <div>
                                @if (Model.HoatDong.TrangThaiDuyet == "Đã duyệt")
                                {
                                    <span class="badge bg-success">@Model.HoatDong.TrangThaiDuyet</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">@Model.HoatDong.TrangThaiDuyet</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="row g-3">
                        <div class="col-6 col-lg-12">
                            <div class="qr-container">
                                <h6 class="fw-bold text-primary mb-2">QR Đăng Ký</h6>
                                @if (!string.IsNullOrEmpty(Model.QRCodeDangKyUrl))
                                {
                                    <img src="@Model.QRCodeDangKyUrl" alt="QR Đăng Ký" class="img-fluid qr-img" />
                                    <div class="small text-muted fst-italic">Quét để đăng ký</div>
                                }
                                else
                                {
                                    <div class="text-muted py-4">Chưa có mã QR</div>
                                }
                            </div>
                        </div>
                        <div class="col-6 col-lg-12">
                            <div class="qr-container">
                                <h6 class="fw-bold text-success mb-2">QR Điểm Danh</h6>
                                @if (!string.IsNullOrEmpty(Model.QRCodeDiemDanhUrl))
                                {
                                    <img src="@Model.QRCodeDiemDanhUrl" alt="QR Điểm Danh" class="img-fluid qr-img" />
                                    <div class="small text-muted fst-italic">Quét để check-in</div>
                                }
                                else
                                {
                                    <div class="text-muted py-4">Chưa có mã QR</div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-white border-top p-3 d-flex justify-content-end gap-2">
            <a asp-page="/Student/XemDanhSachHoatDong" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>

            @if (User.IsInRole("HocSinh"))
            {
                <a asp-page="/Student/DiemDanhHoatDong"
                   asp-route-IDHoatDong="@Model.IDHoatDong"
                   class="btn btn-success fw-bold px-4">
                    <i class="bi bi-geo-alt-fill"></i> Điểm danh ngay
                </a>
            }
        </div>
    </div>
</div>