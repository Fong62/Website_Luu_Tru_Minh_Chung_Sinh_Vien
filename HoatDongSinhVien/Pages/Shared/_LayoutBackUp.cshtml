<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HoatDongSinhVien</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HoatDongSinhVien.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>
    <div class="wrapper">
        @if (signInManager.IsSignedIn(User))
        {
            @await Component.InvokeAsync("SidebarMenu")
        }

        <main role="main" class="content-wrapper">
            <div class="container-fluid">
                <div class="header bg-primary text-white p-3 mb-4">
                    <div class="d-flex justify-content-start align-items-center">
                        <!-- Logo Trường -->
                        <img src="~/img/Logo.png" alt="HCMUE Logo" class="header-logo" style="height: 50px; margin-right: 20px;">
                        <!-- Tên trường -->
                        <h2 class="fw-bold mb-0">Trường Đại học Sư phạm TP. Hồ Chí Minh</h2>
                    </div>
                </div>
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - HoatDongSinhVien - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>