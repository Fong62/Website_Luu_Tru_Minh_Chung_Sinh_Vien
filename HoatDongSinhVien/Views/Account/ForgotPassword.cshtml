@model HoatDongSinhVien.Models.ViewModels.ForgotPasswordViewModel

<div class="text-center mb-4">
    <img src="~/img/Logo.png" style="width:100px" />
    <h5 class="fw-bold text-primary mt-3">TRƯỜNG ĐẠI HỌC SƯ PHẠM</h5>
    <h6 class="fw-bold text-primary">THÀNH PHỐ HỒ CHÍ MINH</h6>
    <p class="text-muted">Cổng thông tin đào tạo</p>
</div>

<div class="card shadow-sm border-0 p-4">
    <h4 class="text-center mb-4 fw-bold">Quên mật khẩu</h4>

    <form asp-action="ForgotPassword" method="post">
        @Html.AntiForgeryToken()

        <div class="form-floating mb-3">
            <input asp-for="UserName" class="form-control" placeholder="Tên đăng nhập" />
            <label asp-for="UserName"></label>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <label asp-for="Email"></label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100 btn-lg py-3"
                style="background-color: #3f51b5;">
            Xác nhận
        </button>
    </form>

    <div class="text-center mt-3">
        <a asp-action="Login" class="small text-decoration-none">Quay lại đăng nhập</a>
    </div>
</div>

<!-- MODAL RESET PASSWORD -->
<div class="modal fade" id="resetPasswordModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <form asp-action="ResetPassword" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" name="UserId"
                       value="@TempData["ResetUserId"]" />

                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Đặt lại mật khẩu</h5>
                    <button class="btn-close btn-close-white"
                            data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label>Mật khẩu mới</label>
                        <input type="password" name="NewPassword"
                               class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label>Xác nhận mật khẩu</label>
                        <input type="password" name="ConfirmPassword"
                               class="form-control" required />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary w-100 btn-lg py-3"
                            style="background-color: #3f51b5;">
                        Cập nhật mật khẩu
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

@* Messages *@

@if (TempData["ShowResetPasswordModal"] != null)
{
    <script>
        window.addEventListener('load', function () {
            new bootstrap.Modal(
                document.getElementById('resetPasswordModal')
            ).show();
        });
    </script>
}

@if (TempData["ResetPasswordSweetAlert"] != null)
{
    <script>
        window.addEventListener('load', function () {
            Swal.fire({
                icon: 'success',
                title: 'Thành công!',
                text: '@Html.Raw(TempData["ResetPasswordSweetAlert"])',
                confirmButtonText: 'Đăng nhập',
                allowOutsideClick: false
            }).then(() => {
                window.location.href = '@Url.Action("Login", "Account")';
            });
        });
    </script>
}

@if (TempData["ResetPasswordError"] != null)
{
    <script>
        window.addEventListener('load', function () {
            Swal.fire({
                icon: 'error',
                title: 'Lỗi',
                text: '@Html.Raw(TempData["ResetPasswordError"])',
                confirmButtonText: 'Đóng'
            });
        });
    </script>
}
@if (TempData["ErrorMessageForgotPass"] != null)
{
    <script>
        window.addEventListener('load', function () {
            Swal.fire({
                icon: 'error',
                title: 'Lỗi',
                text: '@Html.Raw(TempData["ErrorMessageForgotPass"])',
                confirmButtonText: 'Đóng'
            });
        });
    </script>
}

